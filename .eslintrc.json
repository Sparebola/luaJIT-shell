{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-typescript-prettier",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            0,
            "windows"
        ],
        "lines-between-class-members": "off",
        "prettier/prettier": [
            "warn",
            {
                "endOfLine": "auto"
            }
        ]
    },
    "ignorePatterns": [
        "dist",
        "script"
    ]
}